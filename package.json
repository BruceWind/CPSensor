{
  "main": "public/index.js",
  "name": "CPSensor",
  "productName": "CPSensor",
  "version": "0.0.0",
  "description": "Cross platform sensor.",
  "license": "MIT",
  "repository": "sindresorhus/electron-boilerplate",
  "author": {
    "name": "BruceWind",
    "email": "hide@hide.com",
    "url": "https://brucewind.github.io"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "start": "electron .",
    "clean": "rm -r node_modules/",
    "electron": "wait-on tcp:3000 && electron .",
    "start-backup": "react-scripts start",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "pack": "electron-builder --dir",
    "compile": "electron-webpack",
    "dist-linux": "yarn compile && electron-builder --linux",
    "dist-mac": "yarn compile && electron-builder --macos",
    "release": "np"
  },
  "electronWebpack": {
    "commonSourceDirectory": "common",
    "main": {
      "sourceDirectory": "public"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.0.0",
    "electron-debug": "^3.2.0",
    "electron-store": "^8.0.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.3.8",
    "electron-util": "^0.15.1",
    "electron-webpack": "^2.8.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "electron-canvas-to-buffer": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "systeminformation": "^5.11.8",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "np": "^7.5.0",
    "wait-on": "^6.0.1",
    "xo": "^0.39.1"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "io.github.BrueWind",
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "directories": {
      "buildResources": "src"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "src",
      "public",
      "assets"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "extends": null,
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
